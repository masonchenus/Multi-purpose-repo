root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.js]
indent_size = 4
end_of_line = lf

[*.json]
indent_size = 2
end_of_line = lf

[*.html]
indent_size = 2
end_of_line = lf

[*.css]
indent_size = 2
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
